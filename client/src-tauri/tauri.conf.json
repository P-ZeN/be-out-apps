{
    "productName": "Be Out!",
    "version": "1.0.0",
    "identifier": "com.beout.app",
    "build": {
        "beforeBuildCommand": "npm run build:client",
        "beforeDevCommand": "npm run dev",
        "frontendDist": "../build",
        "devUrl": "http://localhost:5173"
    },
    "app": {
        "windows": [
            {
                "fullscreen": false,
                "height": 600,
                "resizable": true,
                "title": "Be Out!",
                "width": 800,
                "devtools": true
            }
        ],
        "security": {
            "csp": null
        },
        "withGlobalTauri": true
    },
    "bundle": {
        "active": true,
        "category": "Lifestyle",
        "copyright": "Copyright Â© 2025 Be Out!",
        "icon": [
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/32x32.png",
            "icons/icon.icns",
            "icons/icon.ico",
            "icons/icon.png",
            "icons/Square107x107Logo.png",
            "icons/Square150x150Logo.png",
            "icons/Square284x284Logo.png",
            "icons/Square30x30Logo.png",
            "icons/Square310x310Logo.png",
            "icons/Square44x44Logo.png",
            "icons/Square71x71Logo.png",
            "icons/Square89x89Logo.png",
            "icons/StoreLogo.png"
        ],
        "longDescription": "Discover amazing events happening around you. Connect with your community and never miss out on experiences that matter.",
        "resources": [],
        "shortDescription": "Discover events in your community",
        "targets": "all",
        "iOS": {
            "minimumSystemVersion": "13.0"
        },
        "android": {
            "minSdkVersion": 24
        }
    },
    "plugins": {
        "opener": {},
        "shell": {
            "open": true
        }
    }
}
