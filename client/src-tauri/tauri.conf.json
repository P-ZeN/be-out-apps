{
    "productName": "BeOut",
    "version": "1.0.0",
    "identifier": "com.beout.app",
    "build": {
        "beforeBuildCommand": "npm run build:mobile",
        "beforeDevCommand": "npm run dev",
        "frontendDist": "../build",
        "devUrl": "http://localhost:5173"
    },
    "app": {
        "windows": [
            {
                "fullscreen": false,
                "height": 600,
                "resizable": true,
                "title": "Be Out!",
                "width": 800
            }
        ],
        "withGlobalTauri": false,
        "security": {
            "csp": "default-src 'self' 'unsafe-inline' 'unsafe-eval' data: https: blob:; script-src 'self' 'unsafe-inline' 'unsafe-eval' blob:; worker-src 'self' blob:; connect-src 'self' https: wss: data:; style-src 'self' 'unsafe-inline' data: https://fonts.googleapis.com; font-src 'self' data: https://fonts.gstatic.com;"
        }
    },
    "bundle": {
        "active": true,
        "category": "Lifestyle",
        "copyright": "Copyright Â© 2025 Be Out!",
        "icon": [
            "icons/32x32.png",
            "icons/64x64.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico",
            "icons/icon.png",
            "icons/be-out_icon_512x512.png"
        ],
        "longDescription": "Discover amazing events happening around you. Connect with your community and never miss out on experiences that matter.",
        "resources": [],
        "shortDescription": "Discover events in your community",
        "targets": "all",
        "iOS": {
            "minimumSystemVersion": "12.0",
            "developmentTeam": "${APPLE_DEVELOPMENT_TEAM}",
            "frameworks": [
                "Security",
                "SystemConfiguration",
                "AuthenticationServices",
                "SafariServices",
                "LocalAuthentication",
                "WebKit"
            ]
        },
        "android": {
            "minSdkVersion": 24
        }
    },
    "plugins": {
        "shell": {
            "open": true
        },
        "deep-link": {
            "schemes": [
                {
                    "protocol": "beout",
                    "host": "auth",
                    "associatedDomains": [
                        "server.be-out-app.dedibox2.philippezenone.net"
                    ]
                },
                {
                    "protocol": "com.googleusercontent.apps.1064619689471-mrna5dje1h4ojt62d9ckmqi3e8q07sjc"
                }
            ]
        },
        "google-auth": {
            "clientId": {
                "android": "${GOOGLE_CLIENT_ID_ANDROID}",
                "desktop": "${GOOGLE_SERVER_CLIENT_ID}",
                "ios": "${GOOGLE_CLIENT_ID_IOS}"
            }
        }
    }
}
