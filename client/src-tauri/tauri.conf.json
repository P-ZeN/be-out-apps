{
    "productName": "Be Out",
    "version": "1.0.0",
    "identifier": "com.beout.app",
    "build": {
        "beforeBuildCommand": "npm run build:mobile",
        "beforeDevCommand": "npm run dev",
        "frontendDist": "../build",
        "devUrl": "http://localhost:5173"
    },
    "app": {
        "windows": [
            {
                "fullscreen": false,
                "height": 600,
                "resizable": true,
                "title": "Be Out",
                "width": 800
            }
        ],
        "withGlobalTauri": false,
        "security": {
            "csp": "default-src 'self' 'unsafe-inline' 'unsafe-eval' data: https: http://localhost:* blob:; script-src 'self' 'unsafe-inline' 'unsafe-eval' blob: https://js.stripe.com https://m.stripe.network https://m.stripe.com; worker-src 'self' blob:; connect-src 'self' https: wss: http://localhost:* data: https://api.stripe.com https://m.stripe.network https://m.stripe.com; style-src 'self' 'unsafe-inline' data: https://fonts.googleapis.com https://api.mapbox.com; font-src 'self' data: https://fonts.gstatic.com; img-src 'self' data: https: http://localhost:* blob:; frame-src 'self' https://js.stripe.com https://hooks.stripe.com https://www.be-out-app.dedibox2.philippezenone.net;"
        }
    },
    "bundle": {
        "active": true,
        "category": "Lifestyle",
        "copyright": "Copyright Â© 2025 Be Out",
        "icon": [
            "icons/32x32.png",
            "icons/64x64.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico",
            "icons/icon.png",
            "icons/be-out_icon_512x512.png"
        ],
        "longDescription": "Discover amazing events happening around you. Connect with your community and never miss out on experiences that matter.",
        "resources": [],
        "shortDescription": "Discover events in your community",
        "targets": "all",
        "iOS": {
            "minimumSystemVersion": "15.0",
            "developmentTeam": "${APPLE_DEVELOPMENT_TEAM}",
            "frameworks": [
                "Security",
                "SystemConfiguration",
                "AuthenticationServices",
                "SafariServices",
                "LocalAuthentication",
                "WebKit"
            ]
        },
        "android": {
            "minSdkVersion": 24
        }
    },
    "plugins": {
        "shell": {
            "open": true
        },
        "deep-link": {
            "schemes": [
                {
                    "protocol": "beout",
                    "host": "auth",
                    "associatedDomains": [
                        "server.be-out-app.dedibox2.philippezenone.net"
                    ]
                }
            ]
        }
    }
}
